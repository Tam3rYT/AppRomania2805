<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".ITA.Italia"
        >

        <LinearLayout
            android:layout_width="316dp"
            android:layout_height="1076dp"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="-5dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta_stencil"
                android:text="@string/aspetti_romania"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/allerta_stencil"
                android:text="@string/Aspetti"
                android:textColor="#272727"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FECE2F"
                        android:onClick="apriStoriciING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="History"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Historical Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/nicolae_ceausescu">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FF6741"
                        android:onClick="apriSocialiING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Social"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a2"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Social Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/Lavoro">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CFE1E6"
                        android:onClick="apriPoliticiING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Political"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a3"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Political Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/Politica">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00D100"
                        android:onClick="apriFisiciING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Physical"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a4"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Physical Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/Fisica">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FAD02C"
                        android:onClick="apriEconomiciING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Economy"
                            android:textColor="#ffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a5"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Economy Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="90dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/Eco">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00D1D1"
                        android:onClick="apriCulturaliING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Culture"
                            android:textColor="#ffff"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a6"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Culture Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/Cult">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#607800"
                        android:onClick="apriAmbientaliING"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/a7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Environmental"
                            android:textColor="#ffff"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/a7"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="3dp"
                            android:text="Click Here, \nfor the Environmental Aspects!"
                            android:textColor="#ffff" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="-10dp"
                            android:maxHeight="100dp"
                            android:src="@drawable/Amb">

                        </ImageView>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>